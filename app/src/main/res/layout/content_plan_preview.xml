<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_fragment"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/text_training_plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Тренировочный план"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_training_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:text="Развитие скорости"
                        android:textColor="@color/button_blue"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="7"
                        android:src="@drawable/icon_timer_gray"/>

                    <TextView
                        android:id="@+id/tv_total_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="4"
                        android:gravity="end"
                        android:text="23мин"
                        android:textColor="@color/button_blue"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_training_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                tools:listitem="@layout/item_plan_preview"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="35dp"
                android:layout_marginStart="35dp"
                app:cardBackgroundColor="@color/special_color_button"
                app:cardCornerRadius="6dp">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/bt_save_all_plan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:mrl_rippleDuration="200"
                    app:mrl_rippleFadeDuration="50">

                    <TextView
                        android:id="@+id/tv_bottom_preview_plan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/save_all_plan"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </com.balysv.materialripple.MaterialRippleLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</layout>