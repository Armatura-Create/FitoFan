<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_fragment"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="@color/background_card_view_create_plan"
                app:cardCornerRadius="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/training_class"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="17sp"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/et_training_name_create"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:background="#00000000"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:hint="Нажмите что бы ввести"
                            android:longClickable="false"
                            android:textColor="@color/button_blue"
                            android:textColorHint="@android:color/darker_gray"
                            android:textSize="15sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="3dp"
                            android:background="@color/background_delimiter"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:text="@string/training_description"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="17sp"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/ed_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:background="#00000000"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:hint="Нажмите что бы ввести"
                            android:longClickable="false"
                            android:textColor="@color/button_blue"
                            android:textColorHint="@android:color/darker_gray"
                            android:textSize="12sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="3dp"
                            android:background="@color/background_delimiter"/>
                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:id="@+id/image_training_plan_card"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="35dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="15dp"
                        android:visibility="gone"
                        app:cardCornerRadius="6dp">

                        <ImageView
                            android:id="@+id/image_training_plan_create"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/play"/>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="15dp"
                        app:cardBackgroundColor="@color/button_blue"
                        app:cardCornerRadius="6dp">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:id="@+id/bt_add_mediafile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:mrl_rippleDuration="200"
                            app:mrl_rippleFadeDuration="50">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/add_image_file"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:textStyle="bold"/>
                        </com.balysv.materialripple.MaterialRippleLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_exercise_create_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:scrollbars="vertical"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_marginTop="8dp"
                tools:listitem="@layout/item_create_plan"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="@color/button_blue"
                    app:cardCornerRadius="6dp">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/bt_add_item_exercise"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:mrl_rippleDuration="200"
                        app:mrl_rippleFadeDuration="50">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/add_exercise"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="35dp"
                    app:cardCornerRadius="6dp">

                    <ImageView
                        android:id="@+id/iv_total_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/shape"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/all_time_plan"
                            android:textColor="@color/transparent_text_white"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_total_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="15:30"
                            android:textColor="@android:color/white"
                            android:textSize="32sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="35dp"
                    app:cardBackgroundColor="@color/special_color_button"
                    app:cardCornerRadius="6dp">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/bt_save_all_plan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:mrl_rippleDuration="200"
                        app:mrl_rippleFadeDuration="50">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/save_all_plan"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>